<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
	<system>
		<section id="dev" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
			<label>dev</label>
			<tab>advanced</tab>
			<resource>Serfe_UncacheableBlockDetector::config_serfe_unacheableblockdetector</resource>
			<group id="cache_detector" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
				<label>Uncached Blocks Detector - by Serfe</label>
				<field id="enabled" type="select" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
					<label>Enabled</label>
					<comment/>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
				</field>
				<field id="die" type="select" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
					<label>Throw exception when found</label>
					<comment>If active, will throw an exception. If disabled, will write into the debug.log file the blocks found and the render will complete normally.</comment>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
				</field>
			</group>
		</section>
	</system>
</config>
